<%- include ('../partials/header') %>
    <%- include ('../partials/navbar') %>
        <main style="background-color: rgba(255, 255, 255, 0.603);">
            <style>
                body{
                    background-image: url("https://images6.alphacoders.com/773/773204.jpg");
                    background-repeat: no-repeat;
                    background-size: 150%;
                }
              </style>
            <div class="container">
                <!-- THE REST OF YOUR HTML CODE GOES HERE -->
                <center><h4 style="padding-top: 6%; font-family: Ysabeau;">Creating a better social experience for all skiers and snowboarders alike.</h4></center>
                <h2 style="padding-top: 4%;">Register</h2>
                <form action="/register" method="POST">
                    <div class="form-group">
                        <label for="username" style="padding-top: 3%;">Username</label>
                        <input type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter username" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Enter password" required>
                    </div>
                    <div>
                        <label for="checkbox1" style="padding-top: 3%;">Select Passes:</label><br>

                        <input type="checkbox" name="Ikon" id="checkbox1">
                        <label for="checkbox1">Ikon</label><br>

                        <input type="checkbox" name="Epic" id="checkbox2">
                        <label for="checkbox2">Epic</label><br>

                        <input type="checkbox" name="Indy" id="checkbox3">
                        <label for="checkbox3">Indy</label><br>

                        <input type="checkbox" name="MC" id="checkbox4">
                        <label for="checkbox4">Mountain Collective</label><br>
                    </div>
                    <div>
                      <br>
                      <br>
                      Select Proficiency:
                      <br>
                      <input type="radio" name="skill" value="Beginner" checked> Beginner
                      <br>
                      <input type="radio" name="skill" value="Intermediate"> Intermediate
                      <br>
                      <input type="radio" name="skill" value="Advanced"> Advanced
                      <br>
                      <input type="radio" name="skill" value="Pro"> Pro
                      <br>
                      <br>
                  </div>
                    <p style="padding-top: 2%;">Have an account already? <a href="/login">Log in</a> here</p>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
                <br>
                <br>
            </div>
        </main>


        <%- include ('../partials/footer') %>